{% comment %}
  VITALBLEND INFINITE MARQUEE
  Inspired by Pupford.com "Peanut crunchies are back" bar.
{% endcomment %}

{%- style -%}
  .vb-marquee-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_y }}px 0;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }

  .vb-marquee-inner {
    display: flex;
    width: max-content;
    animation: marquee-scroll {{ section.settings.speed }}s linear infinite;
  }

  .vb-marquee-item {
    font-size: {{ section.settings.font_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0 {{ section.settings.item_gap }}px;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .vb-marquee-item a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s;
  }
  .vb-marquee-item a:hover {
    opacity: 0.7;
  }

  .vb-marquee-sep {
    margin-left: {{ section.settings.item_gap }}px;
    opacity: 0.3;
  }

  @keyframes marquee-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.33%); }
  }

  /* Pause on hover if enabled */
  {% if section.settings.pause_on_hover %}
    .vb-marquee-{{ section.id }}:hover .vb-marquee-inner {
      animation-play-state: paused;
    }
  {% endif %}
{%- endstyle -%}

<div class="vb-marquee-{{ section.id }} marquee-bar" role="region" aria-label="Announcement Marquee">
  <div class="vb-marquee-inner">
    {%- comment -%}
      Repeat the items multiple times to ensure the scroll is seamless.
      We use 3 sets to cover large screens comfortably.
    {%- endcomment -%}
    {%- for i in (1..3) -%}
      {%- for block in section.blocks -%}
        <div class="vb-marquee-item" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
          {%- else -%}
            {{ block.settings.text }}
          {%- endif -%}

          {%- if section.settings.show_separator -%}
            <span class="vb-marquee-sep">|</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "VitalBlend Marquee",
  "class": "vitalblend-marquee-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (Admin Only)",
      "default": "Announcement Bar Marquee"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Scroll Speed (seconds)",
      "default": 20
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "padding_y",
      "min": 4,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Vertical Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "item_gap",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Gap between items",
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "show_separator",
      "label": "Show Separator (|)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on Hover",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "FREE SHIPPING ON ORDERS OVER $50",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VitalBlend Marquee",
      "blocks": [
        {
          "type": "announcement",
          "settings": { "text": "VITALBLEND PROTEIN ENHANCER IS HERE!" }
        },
        {
          "type": "announcement",
          "settings": { "text": "BOOST YOUR DAILY ENERGY NATURALLY" }
        },
        {
          "type": "announcement",
          "settings": { "text": "FREE SHIPPING ON ALL SUBSCRIPTIONS" }
        }
      ]
    }
  ]
}
{% endschema %}
