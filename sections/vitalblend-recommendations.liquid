{% comment %}
  SECTION: VITALBLEND RECOMMENDATIONS (Cross-Sell)
  Version: Final
  Description: Allows the admin to select a collection to display up to 3 product recommendations.
{% endcomment %}

<div class="vb-recommendations-wrapper">
  <h2 class="vb-rec-title">{{ section.settings.heading | escape }}</h2>

  <div class="vb-rec-grid">
    {%- assign selected_collection = section.settings.collection_source -%}

    {%- if selected_collection != blank -%}
      {%- for product in collections[selected_collection].products limit: 3 -%}
        <div class="vb-rec-card">
          <a href="{{ product.url }}" class="vb-rec-image-link">
            <img
              src="{{ product.featured_image | image_url: width: 400, height: 400, crop: 'center' }}"
              width="400"
              height="400"
              loading="lazy"
              alt="{{ product.title | escape }}"
            >
          </a>
          <div class="vb-rec-info">
            <h3 class="vb-rec-product-title">{{ product.title }}</h3>
            <div class="vb-rec-price">{{ product.price | money }}</div>
            <a href="{{ product.url }}" class="vb-rec-btn">View Details</a>
          </div>
        </div>
      {%- endfor -%}
    {%- else -%}
      <p class="vb-rec-empty-state">Please select a collection in the theme editor to display products here.</p>
    {%- endif -%}
  </div>
</div>

{% style %}
  /* --- RECOMMENDATIONS SECTION STYLES --- */
  .vb-recommendations-wrapper {
    max-width: 1200px;
    margin: 4rem auto 6rem; /* Added bottom margin for spacing */
    padding: 0 20px;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .vb-rec-title {
    text-align: center;
    font-size: 2.2rem;
    margin-bottom: 3rem;
    font-weight: 700;
    color: #111;
  }

  /* Grid Layout */
  .vb-rec-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
  }

  /* Product Card */
  .vb-rec-card {
    border: 1px solid #f0f0f0;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: #fff;
  }

  .vb-rec-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  /* Image Area */
  .vb-rec-image-link {
    display: block;
    overflow: hidden;
  }

  .vb-rec-image-link img {
    width: 100%;
    height: 300px; /* Fixed height for visual consistency */
    object-fit: cover;
    background: #f9f9f9;
    transition: transform 0.5s ease;
  }

  .vb-rec-card:hover .vb-rec-image-link img {
    transform: scale(1.05); /* Subtle zoom effect on hover */
  }

  /* Info Area */
  .vb-rec-info {
    padding: 1.5rem;
    text-align: center;
  }

  .vb-rec-product-title {
    font-size: 1.1rem;
    margin: 0 0 10px;
    min-height: 2.4em; /* Ensures alignment even with 2-line titles */
    line-height: 1.3;
    font-weight: 600;
    color: #222;
  }

  .vb-rec-price {
    color: #555;
    font-weight: bold;
    font-size: 1.1rem;
    margin-bottom: 15px;
  }

  /* Button */
  .vb-rec-btn {
    display: inline-block;
    padding: 10px 24px;
    border: 1px solid #000;
    color: #000;
    text-decoration: none;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 700;
    transition: all 0.2s;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .vb-rec-btn:hover {
    background: #000;
    color: #fff;
  }

  /* Empty State */
  .vb-rec-empty-state {
    grid-column: 1/-1;
    text-align: center;
    color: #666;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 8px;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .vb-rec-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .vb-rec-grid {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "VB Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "You May Also Like"
    },
    {
      "type": "collection",
      "id": "collection_source",
      "label": "Source Collection",
      "info": "Select a collection to display up to 3 products."
    }
  ],
  "presets": [
    {
      "name": "VB Recommendations"
    }
  ]
}
{% endschema %}
