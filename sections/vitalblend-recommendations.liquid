{% comment %}
  SECTION: VITALBLEND RECOMMENDATIONS (Cross-Sell)
  Description: Rebranded version of the cross-sell section.
{% endcomment %}

<div class="vb-recommendations-wrapper">
  <h2 class="vb-rec-title">{{ section.settings.heading | escape }}</h2>

  <div class="vb-rec-grid">
    {%- assign selected_collection = section.settings.collection_source -%}

    {%- if selected_collection != blank -%}
      {%- for product in collections[selected_collection].products limit: 4 -%}
        <div class="vb-rec-card">
          <div class="vb-rec-image-link">
            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | image_url: width: 600, height: 600, crop: 'center' }}"
                width="300"
                height="300"
                loading="lazy"
                alt="{{ product.title | escape }}"
              >
            </a>
            <button type="button" class="vb-quick-add" onclick="quickAdd('{{ product.variants.first.id }}', this)">
              ADD
            </button>
          </div>
          <div class="vb-rec-info">
            <a href="{{ product.url }}" class="vb-rec-link">
              <h3 class="vb-rec-product-title">{{ product.title }}</h3>
            </a>
            <div class="vb-rec-price">{{ product.price | money }}</div>
          </div>
        </div>
      {%- endfor -%}
    {%- else -%}
      <p class="vb-rec-empty-state">Please select a collection in the theme editor.</p>
    {%- endif -%}
  </div>
</div>

{% style %}
  .vb-recommendations-wrapper {
    max-width: 1300px;
    margin: 80px auto;
    padding: 0 30px;
    font-family: 'Outfit', sans-serif;
  }

  .vb-rec-title {
    text-align: center;
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 40px;
    color: var(--vb-black);
  }

  .vb-rec-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
  }

  .vb-rec-card {
    transition: 0.3s;
  }

  .vb-rec-image-link {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: var(--vb-gray);
    aspect-ratio: 1 / 1;
  }

  .vb-rec-image-link img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .vb-rec-card:hover .vb-rec-image-link img {
    transform: scale(1.05);
  }

  .vb-quick-add {
    position: absolute;
    bottom: 12px;
    right: 12px;
    background: var(--vb-red);
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 50px;
    font-weight: 900;
    font-size: 12px;
    cursor: pointer;
    transition: 0.2s;
    opacity: 0;
    transform: translateY(10px);
  }

  .vb-rec-card:hover .vb-quick-add {
    opacity: 1;
    transform: translateY(0);
  }

  .vb-rec-info {
    padding: 15px 0;
    text-align: left;
  }

  .vb-rec-link {
    text-decoration: none;
    color: inherit;
  }

  .vb-rec-product-title {
    font-size: 16px;
    font-weight: 800;
    margin: 0 0 5px;
    line-height: 1.2;
  }

  .vb-rec-price {
    font-weight: 800;
    font-size: 14px;
    color: #666;
  }

  @media (max-width: 900px) {
    .vb-rec-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .vb-quick-add {
      opacity: 1;
      transform: none;
    }
  }
{% endstyle %}

<script>
  function quickAdd(variantId, btn) {
    const originalText = btn.innerText;
    btn.innerText = 'ADDING...';
    btn.disabled = true;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ items: [{ id: variantId, quantity: 1 }] }),
    })
      .then((response) => response.json())
      .then((data) => {
        btn.innerText = 'ADDED!';
        setTimeout(() => {
          btn.innerText = originalText;
          btn.disabled = false;
        }, 2000);
        document.dispatchEvent(new CustomEvent('cart:updated', { detail: data }));
      })
      .catch((error) => {
        console.error('Error:', error);
        btn.innerText = 'ERROR';
        setTimeout(() => {
          btn.innerText = originalText;
          btn.disabled = false;
        }, 2000);
      });
  }
</script>

{% schema %}
{
  "name": "VB Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Complete the Set"
    },
    {
      "type": "collection",
      "id": "collection_source",
      "label": "Source Collection"
    }
  ],
  "presets": [
    {
      "name": "Vitalblend Recommendations"
    }
  ]
}
{% endschema %}
