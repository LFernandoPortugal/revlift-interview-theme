{% comment %}
  SECCIÓN: VITALBLEND CROSS-SELL
  Permite al admin elegir una colección para recomendar productos.
{% endcomment %}

<div class="vb-recommendations-wrapper">
  <h2 class="vb-rec-title">{{ section.settings.heading }}</h2>

  <div class="vb-rec-grid">
    {%- assign selected_collection = section.settings.collection_source -%}

    {%- if selected_collection != blank -%}
      {%- for product in collections[selected_collection].products limit: 3 -%}
        <div class="vb-rec-card">
          <a href="{{ product.url }}" class="vb-rec-image-link">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
          </a>
          <div class="vb-rec-info">
            <h3 class="vb-rec-product-title">{{ product.title }}</h3>
            <p class="vb-rec-price">{{ product.price | money }}</p>
            <a href="{{ product.url }}" class="vb-rec-btn">View Details</a>
          </div>
        </div>
      {%- endfor -%}
    {%- else -%}
      <p style="grid-column: 1/-1; text-align: center; color: #666;">
        Please select a collection in the theme editor to show products here.
      </p>
    {%- endif -%}
  </div>
</div>

{% style %}
  .vb-recommendations-wrapper {
    max-width: 1200px;
    margin: 4rem auto;
    padding: 0 20px;
    font-family: 'Helvetica Neue', sans-serif;
  }
  .vb-rec-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  .vb-rec-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .vb-rec-card {
    border: 1px solid #eee;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s;
  }
  .vb-rec-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .vb-rec-image-link img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    background: #f9f9f9;
  }
  .vb-rec-info {
    padding: 1.5rem;
    text-align: center;
  }
  .vb-rec-product-title {
    font-size: 1.1rem;
    margin: 0 0 10px;
    min-height: 2.4em;
  }
  .vb-rec-price {
    color: #555;
    font-weight: bold;
    margin-bottom: 15px;
  }

  .vb-rec-btn {
    display: inline-block;
    padding: 10px 20px;
    border: 1px solid #000;
    color: #000;
    text-decoration: none;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.2s;
  }
  .vb-rec-btn:hover {
    background: #000;
    color: #fff;
  }

  @media (max-width: 768px) {
    .vb-rec-grid {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "VB Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You May Also Like"
    },
    {
      "type": "collection",
      "id": "collection_source",
      "label": "Source Collection"
    }
  ],
  "presets": [
    {
      "name": "VB Recommendations"
    }
  ]
}
{% endschema %}
